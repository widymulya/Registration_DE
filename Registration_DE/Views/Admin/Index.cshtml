@model RegisterVM
@{
    ViewData["Title"] = "Registration List";
}

<div class="text-center">
    <h1 class="display-4">Registration data need to be authorize</h1>
</div>


@if (Model.ListRegister != null)
{
    <div class="col-sm-12">
        <div class="table-responsive">
            <table id="gvItem" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>                    
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var n = 0; n < Model.ListRegister.Count; n++)
                    {
                        <tr>
                            <td>
                                @Model.ListRegister[n].ID.ToString()
                                @Html.HiddenFor(a => a.ListRegister[n].ID, new { Value = Model.ListRegister[n].ID })
                            </td>
                            <td>
                                @Model.ListRegister[n].FirstName.ToString()
                                @Html.HiddenFor(a => a.ListRegister[n].FirstName, new { Value = Model.ListRegister[n].FirstName })
                            </td>
                            <td>
                                @Model.ListRegister[n].LastName
                                @Html.HiddenFor(a => a.ListRegister[n].LastName, new { Value = Model.ListRegister[n].LastName })
                            </td>
                            <td>
                                @Model.ListRegister[n].Email
                                @Html.HiddenFor(a => a.ListRegister[n].Email, new { Value = Model.ListRegister[n].Email })
                            </td>                           
                            <td>
                                <a href="@Url.Action("Approve", "Admin", new { Id = Model.ListRegister[n].ID})" class="elements">
                                    <span>Approve</span>
                                </a>
                                |
                                <a href="@Url.Action("Reject", "Admin", new { Id = Model.ListRegister[n].ID})" class="elements">
                                    <span>Reject</span>
                                </a>
                              
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

}
