@model LoginData
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Please Login</h1>
   
</div>


@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
{

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <div class="col-sm-4 text-left">
                    Email
                </div>
                <div class="col-sm-8 text-left">
                    @Html.TextBoxFor(a => a.Email, new { id = "txtEmail",Value = Model.Email, @class = "form-control input-sm" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 text-left">
                    Password
                </div>
                <div class="col-sm-8 text-left">
                    @Html.PasswordFor(a => a.Password, new { id = "txtPassword",Value = Model.Password, @class = "form-control input-sm"})
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary rounded-0">LOGIN</button>
        </div>
        <br/>
        <span class="text-danger">@Model.Message</span>
        <br />
        <a href="@Url.Action("Index", "Register")" class="elements">
            <span>Sign Up</span>
        </a>
    </div>
}